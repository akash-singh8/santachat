// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email      String     @id
  createdAt  DateTime   @default(now())
  in         Chat[]     @relation("in")
  out        Chat[]     @relation("out")
  feedback   Feedback[] @relation("user")
  feedbackTo Feedback[] @relation("to")
}

model Chat {
  id        String   @id @default(uuid())
  message   String
  createdAt DateTime @default(now())
  from      User     @relation("in", fields: [fromUser], references: [email])
  fromUser  String
  to        User     @relation("out", fields: [toUser], references: [email])
  toUser    String
}

model Feedback {
  id       String @id @default(uuid())
  user     String
  fromUser User   @relation("user", fields: [user], references: [email])
  rating   Int
  feedback String
  to       String
  toUser   User   @relation("to", fields: [to], references: [email])
}
